<div class="bg-white p-8 rounded shadow-md w-2/5 mx-auto mt-5">
  <h2 class="text-2xl font-semibold mb-4">Register</h2>
  {{!-- {{#if error}}
    <div
      id="error-message"
      class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative"
      role="alert"
    >
      <span class="block sm:inline">{{error}}</span>
    </div>
  {{/if}} --}}

  {{#if success}}
    <div
      id="error-message"
      class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative my-2"
      role="alert"
    >
      <span class="block sm:inline">{{messages.success}}</span>
    </div>
  {{/if}}

  <form action="/register" method="POST">
    <div class="mb-4">
      <label for="username" class="block text-gray-600">Name:</label>
      <input
        type="text"
        id="username"
        name="username"
        class="w-full mt-2 px-4 py-2 border rounded-md"
      />
      {{#isErrorForField "username" errors}}
        <!-- Render error message for the field -->
        <p
          class="bg-red-100 border border-red-400 my-2 text-red-700 px-4 py-3 rounded relative"
          role="alert"
        >{{msg}}</p>
      {{/isErrorForField}}

    </div>

    <div class="mb-4">
      <label for="email" class="block text-gray-600">Email:</label>
      <input
        type="email"
        id="email"
        name="email"
        class="w-full mt-2 p-2 border rounded-md"
      />
      {{#isErrorForField "email" errors}}
        <!-- Render error message for the field -->
        <p
          class="bg-red-100 border border-red-400 my-2 text-red-700 px-4 py-3 rounded relative"
          role="alert"
        >{{msg}}</p>
      {{/isErrorForField}}
    </div>
    <div class="mb-4">
      <label for="password" class="block text-gray-600">Password:</label>
      <input
        type="password"
        id="password"
        name="password"
        class="w-full mt-2 p-2 border rounded-md"
      />
      {{#isErrorForField "password" errors}}
        <!-- Render error message for the field -->
        <p
          class="bg-red-100 border border-red-400 my-2 text-red-700 px-4 py-3 rounded relative"
          role="alert"
        >{{msg}}</p>
      {{/isErrorForField}}
    </div>

    <button
      type="submit"
      class="w-full bg-blue-500 hover:bg-blue-600 text-white py-2 rounded-md transition duration-300"
    >Register</button>
  </form>
  <p class="text-gray-600 text-sm mt-4">Already have an account?
    <a href="/login" class="text-blue-500">Login</a></p>
</div>