<label
  for="{{name}}"
  class="block text-sm font-medium text-gray-600 my-3"
>{{label}}</label>
<input
  type="{{type}}"
  id="{{name}}"
  name="{{name}}"
  value="{{value}}"
  class="mt-1 p-2 border rounded-md w-full"
/>

{{#isErrorForField name errors}}
  <!-- Render error message for the field -->
  <p
    class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative"
    role="alert"
  >{{msg}}</p>
{{/isErrorForField}}