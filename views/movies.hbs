<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>List of Movies</title>
  </head>
  <body>

    <h1>List of Movies</h1>

    {{#each movies}}
      <div>
        <h2>{{title}}</h2>
        <p>{{plot}}</p>
        <a href="/movies/{{_id}}">View Details</a>
      </div>
    {{/each}}

    <div>
      {{#if hasNextPage}}
        <a href="?page={{nextPage}}">Next Page</a>
      {{/if}}

      {{#if hasPrevPage}}
        <a href="?page={{prevPage}}">Previous Page</a>
      {{/if}}
    </div>

    <a href="/movies/new">Add a New Movie</a>

  </body>
</html>