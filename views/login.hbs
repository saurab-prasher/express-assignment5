<div class="bg-white p-8 rounded shadow-md w-2/5 mx-auto mt-5">
  <h2 class="text-2xl font-semibold mb-4">Login</h2>
  {{#if error}}
    <div
      id="error-message"
      class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative my-2"
    >
      {{error}}
    </div>
  {{/if}}
  <form action="/login" method="POST">
    <div class="mb-4">
      <label for="email" class="block text-gray-600">Email:</label>
      <input
        type="email"
        id="email"
        name="email"
        class="w-full mt-2 p-2 border rounded-md"
      />
    </div>
    <div class="mb-4">
      <label for="password" class="block text-gray-600">Password:</label>
      <input
        type="password"
        id="password"
        name="password"
        class="w-full mt-2 p-2 border rounded-md"
      />
    </div>
    <button
      type="submit"
      class="w-full bg-blue-500 hover:bg-blue-600 text-white py-2 rounded-md transition duration-300"
    >Login</button>
  </form>
  <p class="text-gray-600 text-sm mt-4">Don't have an account?
    <a href="/register" class="text-blue-500">Register</a></p>
</div>